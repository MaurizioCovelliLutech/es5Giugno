<mvc:View 
    controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified" >
    
    <Page title="Customer List">
        <content>
            <SearchField placeholder="Search..." liveChange="onSearch"/>
            <Table
                id="customerTable"
                items="{
                    path: '/Customers',
                    sorter: {
                        path: 'CustomerID'
                    }
                }">
                <columns>
                    <Column>
                        <Text text="Customer ID"/>
                    </Column>
                    <Column>
                        <Text text="Company Name"/>
                    </Column>
                    <Column>
                        <Text text="City"/>
                    </Column>
                    <Column>
                        <Text text="Fax"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press="onCustomerPress">
                        <cells>
                            <Text text="{CustomerID}"/>
                            <Text text="{CompanyName}"/>
                            <Text text="{City}"/>
                            <Text text="{Fax}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
